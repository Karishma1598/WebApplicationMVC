@model WebApplicationMVC.Models.Category

@{
    ViewBag.Title = "Delete Category";
}

<h2>Delete Category</h2>
<p>Are you sure you want to delete this category?</p>
<p><strong>Category Name:</strong> @Model.CategoryName</p>

@using (Html.BeginForm("DeleteConfirmed", "Category", FormMethod.Post))
{
    @Html.HiddenFor(model => model.CategoryId)
    <button type="submit">Delete</button>
}
<a href="@Url.Action("Index", "Category")">Cancel</a>
